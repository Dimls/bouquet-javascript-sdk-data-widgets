{{#if selAvailable}}
    <select class="sq-select form-control squid-api-data-widgets-dimension-selector" {{#if multiple}}multiple{{/if}}>
        {{#each options}}
            <option value="{{value}}" {{#if selected}}selected{{/if}}>
                {{label}}
            </option>
        {{/each}}
    </select>
{{else}}
    <!-- just display filter name -->
    <label class="squid-api-data-widgets-dimension-selector">{{name}}</label>
    <span>-</span>
{{/if}}
